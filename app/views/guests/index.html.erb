<h1>Search</h1>
<%= form_tag({controller: 'guests', action: 'index'}, method: 'get') do %>
    <p>
      <%= label_tag :Name %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Submit", :name => nil %>
    </p>
<% end %>

<h1>Listing users</h1>



<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Household_ID</th>
    <th>Welcome</th>
    <th>Wedding</th>
    <th>Breakfast</th>
  </tr>

  <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.firstname %></td>
        <td><%= guest.lastname %></td>
        <td><%= guest.household_id %></td>
        <td><%= guest.welcome_party %></td>
        <td><%= guest.wedding %></td>
        <td><%= guest.breakfast %></td>
      </tr>
  <% end %>
</table>

