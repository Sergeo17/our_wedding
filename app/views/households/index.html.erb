<h1>Search</h1>
<%= form_tag({controller: 'households', action: 'index'}, method: 'get') do %>
    <p>
      <%= label_tag :lastname %>
      <%= text_field_tag :search, params[:search] %>
      <%= label_tag :zipcode %>
      <%= text_field_tag :zipcode, params[:zipcode] %>
      <%= submit_tag "Submit", :name => nil %>
    </p>
<% end %>

<% @households.each do |h| %>
    <p>
    <%= h.addressline1 %> <%= h.addressline2 %> <%= link_to 'edit', edit_household_path(:id => h.id) %> <br/>
    <%= h.city %> <%= h.state %><br/>
    <%= h.zipcode %><br/>
    <% h.guests.each do |g| %>
        <%= g.firstname %> <%= g.lastname %><br/>
    <% end %>
    </p>
<% end %>